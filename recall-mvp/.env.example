# ===============================================
# Recall MVP - Environment Configuration
# ===============================================
# Copy this file to .env.local and fill in your values:
#   cp .env.example .env.local
#
# The .env.local file is gitignored and will NOT be committed.
# ===============================================

NODE_ENV=production

# -----------------------------------------------
# CORE AUTHENTICATION
# -----------------------------------------------
NEXTAUTH_SECRET=your_nextauth_secret_here
JWT_SECRET=your_jwt_secret_here
CRON_SECRET=your_cron_secret_here
NEXTAUTH_URL=http://localhost:3000

# -----------------------------------------------
# DATABASE - CockroachDB
# -----------------------------------------------
DATABASE_URL=postgresql://user:password@your-cluster.cockroachlabs.cloud:26257/defaultdb?sslmode=require

# -----------------------------------------------
# REDIS - Upstash
# -----------------------------------------------
UPSTASH_REDIS_REST_URL=https://your-database.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_rest_token_here
REDIS_URL=rediss://default:your_redis_password@your-database.upstash.io:6379

# -----------------------------------------------
# LLM PROVIDER - Google Vertex AI
# -----------------------------------------------
LLM_PROVIDER=vertex
GOOGLE_CLOUD_PROJECT=your_google_cloud_project_id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS_BASE64=your_base64_encoded_service_account_json

# -----------------------------------------------
# SPEECH - ElevenLabs
# -----------------------------------------------
SPEECH_PROVIDER=elevenlabs
ELEVENLABS_API_KEY=sk_your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB
ELEVENLABS_AGENT_ID=agent_your_agent_id_here
NEXT_PUBLIC_ELEVENLABS_AGENT_ID=agent_your_agent_id_here

# -----------------------------------------------
# VECTOR STORE - Pinecone
# -----------------------------------------------
PINECONE_API_KEY=pcsk_your_pinecone_api_key_here

# -----------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------
USE_MOCKS=false
NEXT_PUBLIC_USE_MOCKS=false
LOG_LEVEL=info

# -----------------------------------------------
# EMAIL (MailHog for local/staging)
# -----------------------------------------------
SMTP_HOST=mailhog
SMTP_PORT=1025
